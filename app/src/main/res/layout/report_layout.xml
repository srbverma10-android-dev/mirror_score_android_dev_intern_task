<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:visibility="gone"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/incorrectAnswer"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Incorrect Answer"

        android:paddingStart="@dimen/sixteen_dp"
        android:paddingEnd="@dimen/sixteen_dp"
        android:paddingBottom="@dimen/sixteen_dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/incorrectQuestion"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Incorrect Question"

        android:paddingStart="@dimen/sixteen_dp"
        android:paddingEnd="@dimen/sixteen_dp"
        android:paddingBottom="@dimen/sixteen_dp"

        app:layout_constraintTop_toBottomOf="@+id/incorrectAnswer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/missingImage"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Missing Image"

        android:paddingStart="@dimen/sixteen_dp"
        android:paddingEnd="@dimen/sixteen_dp"
        android:paddingBottom="@dimen/sixteen_dp"

        app:layout_constraintTop_toBottomOf="@+id/incorrectQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/missingOption"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Missing Option"

        android:paddingStart="@dimen/sixteen_dp"
        android:paddingEnd="@dimen/sixteen_dp"
        android:paddingBottom="@dimen/sixteen_dp"

        app:layout_constraintTop_toBottomOf="@+id/missingImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/spellingMistake"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Spelling Mistake"

        android:paddingStart="@dimen/sixteen_dp"
        android:paddingEnd="@dimen/sixteen_dp"
        android:paddingBottom="@dimen/sixteen_dp"

        app:layout_constraintTop_toBottomOf="@+id/missingOption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/submitButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="submit"

        app:layout_constraintTop_toBottomOf="@+id/spellingMistake"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>